<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
        Main App Theme.
        ¡CORREGIDO! Cambiado el padre a un tema oscuro para evitar el "pantallazo blanco".
        Esto asegura una transición suave desde el Splash Screen.
    -->
    <style name="Theme.SpotifyAPI" parent="android:Theme.Material.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Usamos la imagen como FONDO de pantalla completa -->
        <item name="windowSplashScreenBackground">@drawable/screenapi</item>

        <!-- El tema que se aplicará después del splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.SpotifyAPI</item>
    </style>
</resources>
